        "design_variables_set_by_user": true,
        "line_search": {
            "line_search_type": "manual_stepping",
            "normalize_search_direction": true,
            "set_by_user": true,
            "step_size": 1.5
        },
        "objectives": [{
            "identifier" : "strain_energy",
            "type"       : "minimization",
            "analyzer" : "kratos",
            "response_settings":{
                "response_type"          : "strain_energy",
                "primal_settings"        : "Response.json",
                "gradient_mode"          : "semi_analytic",
                "step_size"              : 1e-5
            },
            "project_gradient_on_surface_normals" : true
        }],
        "optimization_algorithm": {
            "name"               : "steepest_descent",
            "max_iterations"     : 3,
            "relative_tolerance" : 1e-2,
            "line_search" : {
                "line_search_type"           : "manual_stepping",
                "normalize_search_direction" : true,
                "step_size"                  : 1.5
            }
        },
        "output": {
            "design_history_filename": "design_history",
            "design_output_mode": "WriteOptimizationModelPart",
            "nodal_results": ["SHAPE_CHANGE", "DF1DX" ],
            "output_directory": "Optimization_Results",
            "output_format": {
                "name": "gid"
